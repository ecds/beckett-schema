    attribute star {"yes"}?,
    recipient*,
    text}

directing = element directing {
    attribute profile_id {
        "nonexistent" | xsd:int}?,
    attribute open_issue {"flag"}?,
    attribute revision {"yes"}?,
    attribute oblique_reference {"yes"}?,
    attribute star {"yes"}?,
    directing*,
    text}


# from Microsoft Word document
content = element content {
    person*&
    organization*&
    place*&
    production*&
    publication*&
    writing*&
    recipient*&
    directing*&
    text}