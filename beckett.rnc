    attribute profile_id {
        "nonexistent" | xsd:int}?,
    attribute open_issue {"flag"}?,
    attribute revision {"yes"}?,
    attribute oblique_reference {"yes"}?,
    attribute star {"yes"}?,
    production*,
    text}

