        "nonexistent" | xsd:int}?,
    attribute open_issue {"flag"}?,
    attribute revision {"yes"}?,
    attribute oblique_reference {"yes"}?,
    attribute star {"yes"}?,
    publication*,
    text}

writing = element writing {
    attribute profile_id {
        "nonexistent" | xsd:int}?,
    attribute open_issue {"flag"}?,
    attribute revision {"yes"}?,
    attribute oblique_reference {"yes"}?,
    attribute star {"yes"}?,
